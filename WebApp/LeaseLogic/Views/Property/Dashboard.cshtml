@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4" style="font-family: Arial, sans-serif;">
    <h2 style="color:#142943;">Dashboard Overview</h2>

    <div class="row mt-3">
        <div class="col-md-3">
            <div class="card shadow p-3 text-center">
                <h5 style="color:#2572ad;">Occupancy</h5>
                <p>@ViewBag.OccupancyPercentage %</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow p-3 text-center">
                <h5 style="color:#2572ad;">Total Rent</h5>
                <p>@($"R{ViewBag.TotalRent:N0}")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow p-3 text-center">
                <h5 style="color:#2572ad;">Maintenance</h5>
                <p>—</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow p-3 text-center">
                <h5 style="color:#2572ad;">Lease Expiry</h5>
                <p>—</p>
            </div>
        </div>
    </div>
</div>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.LeaseLogic" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/blue_500</item>
        <item name="android:navigationBarColor">@color/blue_500</item>

        <!-- Customize other elements -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>

    </style>

    <!-- âœ¨ Custom Material Card Style -->
    <style name="LeaseLogicCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>

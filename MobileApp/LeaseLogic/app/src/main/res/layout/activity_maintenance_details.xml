<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarMaintenanceDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_500"
            app:title="Maintenance Details"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <!-- Tenant Section -->
        <LinearLayout
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTenant"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/rounded_border"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTenantName"
                    android:text="Tenant Name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtTenantEmail"
                    android:text="tenant@email.com"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- ðŸ†• New tenant duration line -->
                <TextView
                    android:id="@+id/txtTenantDuration"
                    android:text="Tenant since: 12 Mar 2024 (7 months)"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- Property Info -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Property"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPropertyName"
                android:text="Property Name"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPropertyLocation"
                android:text="Location"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Request Details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_shadow"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTitle"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDescription"
                android:textColor="@color/gray"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPriority"
                android:textColor="@color/blue_700"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtStatus"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDate"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarkInProgress"
                android:text="In Progress"
                app:backgroundTint="@color/blue_500"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarkResolved"
                android:text="Resolved"
                android:layout_marginStart="8dp"
                app:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

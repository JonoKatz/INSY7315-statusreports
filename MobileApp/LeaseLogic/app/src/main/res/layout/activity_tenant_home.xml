<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_home"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:tint="@color/blue_500"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Tenant Dashboard"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!-- Card 1: View Lease -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewLease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="View Lease Details"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: Pay Rent -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPayRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Pay Rent"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 3: Maintenance Request -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMaintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Submit Maintenance Request"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 4: View My Requests -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="View My Requests"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- AI Assistant Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAssistant"
            android:text="Ask AI Assistant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/blue_500"
            android:textAllCaps="false"
            android:layout_marginTop="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:text="Settings"
            android:textAllCaps="false"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/blue_500"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarReports"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_gradient"
            app:title="Reports"
            app:titleTextColor="@color/white" />

        <!-- 🔄 Refresh + Last Updated Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtLastUpdated"
                android:text="Last Updated: --"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefresh"
                android:text="Refresh"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconTint="@color/blue_500"
                android:textColor="@color/white"
                app:strokeColor="@color/blue_500"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <include
            android:id="@+id/shimmerContainer"
            layout="@layout/layout_shimmer_reports"
            android:visibility="gone" />

        <!-- Loading Spinner -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="12dp" />

        <!-- 📊 Overview Section -->
        <TextView
            android:text="Overview"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:alignmentMode="alignMargins"
            app:columnCount="2"
            app:columnOrderPreserved="false"
            app:rowCount="2"
            app:useDefaultMargins="true">

            <include
                android:id="@+id/cardTotalProperties"
                layout="@layout/item_report_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                android:id="@+id/cardTotalRent"
                layout="@layout/item_report_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                android:id="@+id/cardVacancy"
                layout="@layout/item_report_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />
        </androidx.gridlayout.widget.GridLayout>

        <!-- 💰 Monthly Income Chart -->
        <TextView
            android:text="Monthly Income"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartIncome"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_shadow" />

        <!-- 🛠 Maintenance Summary -->
        <TextView
            android:text="Maintenance Summary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridMaintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:alignmentMode="alignMargins"
            app:columnCount="2"
            app:columnOrderPreserved="false"
            app:useDefaultMargins="true">

            <include
                android:id="@+id/cardPending"
                layout="@layout/item_report_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                android:id="@+id/cardInProgress"
                layout="@layout/item_report_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                android:id="@+id/cardResolved"
                layout="@layout/item_report_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />
        </androidx.gridlayout.widget.GridLayout>

        <!-- 🧁 Maintenance Chart -->
        <TextView
            android:text="Maintenance Overview"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartMaintenance"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_shadow" />

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:text="Back"
            android:textColor="@color/white"
            app:cornerRadius="25dp"
            app:strokeColor="@color/blue_500"
            app:strokeWidth="2dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
